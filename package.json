{
    "preview": true,
    "version": "0.0.1",
    "icon": "res/icon.png",
    "publisher": "nkokhelox",
    "name": "svg-font-previewer",
    "displayName": "svg-font-previewer",
    "homepage": "https://github.com/nkokhelox/svg-font-viewer",
    "description": "Preview your svg font. Open command pelete `SVG Font Preview` or `cmd+shift+v`. Font unicode character is show as hexadecimal value.",
    "repository": {
        "type": "git",
        "url": "https://github.com/nkokhelox/svg-font-viewer"
    },
    "bugs": {
        "url": "https://github.com/nkokhelox/svg-font-viewer/issues"
    },
    "galleryBanner": {
        "color": "#AAAAAA",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "license": "MIT",
    "keywords": [
        "svg",
        "font",
        "preview"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.svgFontPreview"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "svg",
                "extensions": [
                    ".svg"
                ]
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.svgFontPreview",
                    "when": "resourceLangId == svg"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.svgFontPreview",
                    "when": "resourceLangId == svg"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.svgFontPreview",
                "title": "SVG Font Preview"
            }
        ],
        "keybindings": [
            {
                "command": "extension.svgFontPreview",
                "when": "editorLangId == svg",
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "SVG Font Preview",
            "properties": {
                "svg-font-previewer.iconSortBy": {
                    "type": "string",
                    "default": "none",
                    "enum": ["none", "name", "unicode"],
                    "description": "Sort the icons name or it's unicode (displayed as hex character) or don't sort at all",
                    "scope": "resource"
                },
                "svg-font-previewer.iconSortOrder": {
                    "type": "string",
                    "enum": ["asc", "desc"],
                    "default": "ascending",
                    "description": "Sort the icons in asc(ascending) or desc(descending) order using the specified `iconSortBy` configuration",
                    "scope": "resource"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/xmldom": "^0.1.29",
        "@types/node": "^7.0.43"
    },
    "dependencies": {
        "xmldom": "^0.1.27"
    }
}