{
    "preview": true,
    "version": "0.0.1",
    "icon": "res/icon.png",
    "publisher": "nkokhelox",
    "name": "svg-font-previewer",
    "displayName": "SVG Font Previwer",
    "homepage": "https://github.com/nkokhelox/svg-font-viewer",
    "description": "Show the SVG font Icons, Icon name and Icon unicode as hexadecimal value. It can also preview any valid SVG file.",
    "repository": {
        "type": "git",
        "url": "https://github.com/nkokhelox/svg-font-viewer"
    },
    "bugs": {
        "url": "https://github.com/nkokhelox/svg-font-viewer/issues"
    },
    "galleryBanner": {
        "color": "#008080",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "license": "MIT",
    "keywords": [
        "svg",
        "font",
        "preview"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.svgFontPreview",
        "onLanguage:xml"
    ],
    "main": "./out/extension",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.svgFontPreview",
                    "when": "resourceLangId == xml",
                    "group": "extension"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.svgFontPreview",
                    "when": "resourceLangId == xml",
                    "group": "extension"
                }
            ]
        },
        "commands": [
            {
                "command": "extension.svgFontPreview",
                "title": "SVG Font Preview",
                "group": "extension"
            }
        ],
        "keybindings": [
            {
                "command": "extension.svgFontPreview",
                "when": "editorLangId == xml",
                "key": "ctrl+shift+v",
                "mac": "cmd+shift+v",
                "group": "extension"
            }
        ],
        "configuration": {
            "title": "SVG Font Preview",
            "group": "extension",
            "type": "object",
            "properties": {
                "svg-font-previewer.iconSortBy": {
                    "description": "Sort the icons by name or it's unicode (displayed as hex character) or don't sort at all",
                    "scope": "resource",
                    "default": "none",
                    "type": "string",
                    "enum": [
                        "none",
                        "name",
                        "unicode"
                    ]
                },
                "svg-font-previewer.iconSortOrder": {
                    "description": "Sort the icons in asc(ascending) or desc(descending) order using the specified `iconSortBy` configuration",
                    "default": "ascending",
                    "scope": "resource",
                    "type": "string",
                    "enum": [
                        "asc",
                        "desc"
                    ]
                },
                "svg-font-previewer.autoOpenPreview": {
                    "description": "Automatically open svg preview or not",
                    "scope": "resource",
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile",
        "package": "code --install-extension ./*.vsix",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "tslint": "^5.8.0",
        "vscode": "^1.1.6",
        "typescript": "^2.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "@types/xmldom": "^0.1.29"
    },
    "dependencies": {
        "xmldom": "^0.1.27"
    }
}
